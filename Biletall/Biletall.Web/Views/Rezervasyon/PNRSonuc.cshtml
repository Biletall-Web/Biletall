@model PNRSonuc

@{
    ViewData["Title"] = "PNRSonuc";
}
@{ 
    IEnumerable<string> erkekKoltuklar = ViewBag.erkekKoltuklar;
    IEnumerable<string> kadinKoltuklar = ViewBag.kadinKoltuklar;
}
<link href="~/lib/font-awesome/css/biletall.css" rel="stylesheet" />
<!--Import Google Icon Font-->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!--Import materialize.css-->
<link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<!--Let browser know website is optimized for mobile-->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<style>
    .seyahat-baslik {
        background-color: #F5F5F5;
        padding:15px 8px 15px 8px;

    }
   
</style>

<link href="~/lib/font-awesome/css/biletall.css" rel="stylesheet" />

    <div class="seyahat-baslik">

        <h5><b>@Model.Sefer.KalkisNokta -</b> <b>@Model.Sefer.VarisNokta</b></h5> <span> @Model.Sefer.Tarih </span>
        @foreach (var item in Model.Rezervasyonlar)
        {
    <span style="float:right; margin-right:15px;"> PNR: <b> @item.PNR</b></span>
        }
    </div>



    <div class="bus-list-item common-journey-item">
        <div class="bus-list-inner">
            <div class="row">
                <div class="col-2">
                    <div class="logo">@Model.Sefer.FirmaAdi</div>
                    <div class="duration">
                        <div class="seat "><small>Koltuk Tipi:</small>@Model.Sefer.OtobusKoltukYerlesimTipi</div>
                    </div>
                </div>
                <div class="col-1">

                    <div class="time">
                        <h3>@Model.Sefer.KalkisSaati</h3>
                    </div>
                    <div class="duration">
                        <h5><span class="icon-sure"></span> @Model.Sefer.YaklasikSeyahatSuresi saat</h5>
                    </div>

                </div>
                <div class="col-3">
                    <div class="slot-one">
                        <div class="distination guzergahGetir">
                            <h5><b style="text-align:center">@Model.Sefer.KalkisNokta</b></h5>

                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <h5><span class="icon-sure"></span><i class="material-icons prefix">access_time </i> @Model.Sefer.YaklasikSeyahatSuresi saat</h5>

                </div>
                <div class="col-3">
                    <div class="slot-one">
                        <div class="distination guzergahGetir">

                            <i class="icon-chevron-right" style="vertical-align: text-bottom;"></i> <h5><b style="text-align:center">@Model.Sefer.VarisNokta</b></h5>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <div class="seyahat-baslik">
        <span><b>Eposta:</b> @Model.Email          </span>
        <span><b>Telefon:</b> @Model.Telefon </span>
    </div>


<div class="card-body">
    <h5>Yolcu Bilgileri</h5>
    <table style="table-layout: fixed; " class="table table-bordered table-striped m-1 p-1">
        <tr style="text-align:center;">
            <th>Yolcu Adı</th>
            <th>Durum</th>
            <th>Koltuk</th>
            <th>E-Bilet No</th>
            <th>Servis İsteği</th>
            <th>Bilet İşlemlerim</th>
            
        </tr>
        @foreach (var item in Model.Rezervasyonlar)
        {
    <tr style="text-align:center">
        <td> @item.Name @item.Surname</td>
        <td>Rezervasyon</td>
        <td style=" white-space: nowrap;">
            @if (erkekKoltuklar.Any())
            {

                <span>
                    <b>@string.Join(",", erkekKoltuklar)</b>
                </span>
            }

            @if (kadinKoltuklar.Any())
            {
                <span>
                    <b>@string.Join(",", kadinKoltuklar)</b> 
                </span>
            }

        </td>
        <td style=" white-space: nowrap;"> </td>
        <td style=" white-space: nowrap;"></td>
        <td style=" white-space: nowrap;"></td>


    </tr>
        }
    </table>
    <br /><br />
    <h5>Sefer Bilgileri</h5>
    <table style="table-layout: fixed; " class="table table-bordered table-striped m-1 p-1">
        <tr style="text-align:center;">
            <th>Sefer Süresi</th>
            <th>Sefer Tipi</th>
            <th>Sefer No</th>
            <th>Cinsiyet</th>
            <th>Peron</th>


        </tr>
      
    <tr style="text-align:center">
        <td> @Model.Sefer.YaklasikSeyahatSuresi Saat</td>
        <td></td>
        <td style=" white-space: nowrap;">@Model.Sefer.SeferNo </td>
        <td style=" white-space: nowrap;">
            @if (erkekKoltuklar.Any())
            {

            <span>
                Erkek
            </span>
        }

            @if (kadinKoltuklar.Any())
            {
                <span>
                    Kadın
                </span>
            }
          
        </td>
            <td style=" white-space: nowrap;"></td>



        </tr>
      
    </table>
</div>

<script type="text/javascript" src="js/materialize.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>